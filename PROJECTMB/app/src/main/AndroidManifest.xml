<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.planesmonitor">

    <application
        android:name=".PlanesMonitorApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activitiy.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activitiy.MainMenuActivity" />
        <activity android:name=".activitiy.SavePlaneActivity" />
        <activity android:name=".activitiy.ShowAllActivity" />
        <activity android:name=".activitiy.FirebaseAuthActivity" />
        <activity android:name=".activitiy.AddPilotActivity" />
        <activity android:name=".activitiy.ShowAllPasengersActivity"></activity>
    </application>

</manifest>